@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function enableEdit(id) {
            const inputField = document.getElementById(id);
            inputField.disabled = false;
            inputField.focus();
            document.getElementById(id + '-edit-btn').classList.add('d-none');
            document.getElementById(id + '-save-indicator').classList.remove('d-none');
        }

        $(document).ready(function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            $('.filter-option').click(function() {
                const filterType = $(this).data('filter-type');
                const filterValue = $(this).data('filter-value');

                console.log(`Filter type: ${filterType}, value: ${filterValue}`);

                $(`.filter-option[data-filter-type="${filterType}"]`).removeClass('active');
                $(this).addClass('active');
            });

            // Alert auto-dismiss
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            $('.cancel-subscription-btn').click(function() {
                const donationId = $(this).data('donation-id');

                Swal.fire({
                    title: 'تأكيد إلغاء الاشتراك',
                    text: 'هل أنت متأكد من رغبتك في إلغاء هذا الاشتراك؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#405712',
                    cancelButtonColor: '#A31621',
                    confirmButtonText: 'نعم، إلغاء الاشتراك',
                    cancelButtonText: 'إلغاء',
                    position: 'center',
                    customClass: {
                        popup: 'swal-rtl'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/User/CancelDonation',
                            type: 'POST',
                            data: { id: donationId },
                            success: function(response) {
                                if (response.success) {
                                    Swal.fire({
                                        title: 'تم إلغاء الاشتراك',
                                        text: 'تم إلغاء اشتراكك بنجاح',
                                        icon: 'success',
                                                            customClass: {
                        popup: 'swal-rtl'
                    },
                                        confirmButtonColor: '#405712'
                                    }).then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'خطأ',
                                        text: response.message || 'حدث خطأ أثناء إلغاء الاشتراك',
                                        icon: 'error',
                                                            customClass: {
                        popup: 'swal-rtl'
                    },
                                        confirmButtonColor: '#405712'
                                    });
                                }
                            },
                            error: function() {
                                Swal.fire({
                                    title: 'خطأ',
                                    text: 'حدث خطأ أثناء الاتصال بالخادم',
                                    icon: 'error',
                                                        customClass: {
                        popup: 'swal-rtl'
                    },
                                    confirmButtonColor: '#405712'
                                });
                            }
                        });
                    }
                });
            });

            $('#editAddressModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var addressId = button.data('address-id');
                var title = button.data('address-title');
                var street = button.data('address-street');
                var city = button.data('address-city');
                var country = button.data('address-country');
                var phone = button.data('address-phone');

                var modal = $(this);
                modal.find('#editAddressId').val(addressId);
                modal.find('#editTitle').val(title);
                modal.find('#editStreet').val(street);
                modal.find('#editCity').val(city);
                modal.find('#editCountry').val(country);
                modal.find('#editPhoneNumber').val(phone);
            });

            $('#editPaymentMethodModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var paymentId = button.data('payment-id');
                var cardHolder = button.data('payment-cardholder');
                var cardNumber = button.data('payment-cardnumber');
                var expiry = button.data('payment-expiry');

                var modal = $(this);
                modal.find('#editPaymentMethodId').val(paymentId);
                modal.find('#editCardHolderName').val(cardHolder);
                modal.find('#editCardNumber').val(cardNumber);
                modal.find('#editExpiryDate').val(expiry);
            });

            $('#viewOrderDetailsModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var orderId = button.data('order-id');

                $.ajax({
                    url: '/User/GetOrderDetails',
                    type: 'GET',
                    data: { orderId: orderId },
                    success: function(response) {
                        $('#orderDetailsContent').html(response);
                    },
                    error: function() {
                        $('#orderDetailsContent').html('<div class="alert alert-danger">حدث خطأ أثناء تحميل تفاصيل الطلب.</div>');
                    }
                });
            });

            $('form[action^="/User/"]').not('form[action="/User/CancelDonation"]').each(function() {
                var form = $(this);
                var formAction = form.attr('action');

                if (formAction.includes('Address') || formAction.includes('PaymentMethod')) {
                    return;
                }

                form.on('submit', function(e) {
                    e.preventDefault();

                    $.ajax({
                        url: formAction,
                        type: 'POST',
                        data: form.serialize(),
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'تم بنجاح',
                                    text: response.message || 'تمت العملية بنجاح',
                                    icon: 'success',
                                    customClass: {
                                        popup: 'swal-rtl'
                                    },
                                    confirmButtonColor: '#405712'
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'خطأ',
                                    text: response.message || 'حدث خطأ أثناء تنفيذ العملية',
                                    icon: 'error',
                                    customClass: {
                                        popup: 'swal-rtl'
                                    },
                                    confirmButtonColor: '#405712'
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                title: 'خطأ',
                                text: 'حدث خطأ أثناء الاتصال بالخادم',
                                icon: 'error',
                                customClass: {
                                    popup: 'swal-rtl'
                                },
                                confirmButtonColor: '#405712'
                            });
                        }
                    });
                });
            });

            // Reports filtering
            $(document).ready(function() {
                // Filter reports function
                function filterReports() {
                    const programFilter = $('#reportProgramFilter').val();
                    const amountFilter = $('#reportAmountFilter').val();
                    const dateFilter = $('#reportDateFilter').val();
                    
                    let visibleCount = 0;
                    
                    $('.report-item').each(function() {
                        const $item = $(this);
                        const donationName = $item.data('donation-name');
                        const donationAmount = $item.data('donation-amount').toString();
                        const reportDate = $item.data('report-date');
                        
                        let showItem = true;
                        
                        if (programFilter && donationName !== programFilter) {
                            showItem = false;
                        }
                        
                        if (amountFilter && donationAmount !== amountFilter) {
                            showItem = false;
                        }
                        
                        if (dateFilter && reportDate !== dateFilter) {
                            showItem = false;
                        }
                        
                        if (showItem) {
                            $item.show();
                            visibleCount++;
                        } else {
                            $item.hide();
                        }
                    });
                    
                    // Show/hide "no reports" message
                    if (visibleCount === 0) {
                        $('#noReportsMessage').removeClass('d-none');
                    } else {
                        $('#noReportsMessage').addClass('d-none');
                    }
                }
                
                // Event listeners for filters
                $('#reportProgramFilter, #reportAmountFilter, #reportDateFilter').on('change', filterReports);
                
                // Initial filtering
                filterReports();
            });
        });
    </script>
}


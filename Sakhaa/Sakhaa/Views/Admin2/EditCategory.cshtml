@model Sakhaa.Models.Category
@{
    ViewData["Title"] = "تعديل التصنيف";
    ViewData["ActivePage"] = "Categories";
    Layout = "_Admin2Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">تعديل التصنيف</h1>
    <a href="/Admin2/Categories" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-1"></i> العودة للتصنيفات
    </a>
</div>

<div class="card border-0 shadow">
    <div class="card-body">
        <form asp-action="EditCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">اسم التصنيف <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label">وصف التصنيف</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="أدخل وصفاً مختصراً للتصنيف"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <hr>
            
            <div class="d-flex justify-content-end gap-2">
                <a href="/Admin2/Categories" class="btn btn-light">إلغاء</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> حفظ التغييرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
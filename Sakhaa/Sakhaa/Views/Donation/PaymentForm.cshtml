        .form-row {
            flex-direction: row;
            align-items: flex-start;
        }
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
    }

        .form-group.full-width {
            width: 100%;
        }

        .form-group.month, .form-group.year {
            flex: 1;
        }

        .form-group.cvc {
            flex: 1;
        }

        .form-group label, .expiry-label {
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #333;
        }

    .light-text {
        font-weight: 350;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 30px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #405712;
            box-shadow: 0 0 0 2px rgba(64, 87, 18, 0.2);
            outline: none;
        }

    .card-expiry-section {
        margin-top: 0.5rem;
    }

    .expiry-label {
        display: block;
        margin-bottom: 0.5rem;
    }

    .form-actions {
        margin-top: 1.5rem;
    }

    .btn-primary {
        display: inline-block;
        background-color: #405712;
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #DAA520;
        }

    .payment-summary {
        /* background-color: #f8f9fa; */
        padding: 1.5rem;
        border-radius: 10px;
        height: fit-content;
        border: 1px solid #405712;
    }

        .payment-summary h3 {
            color: #405712;
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #e0e0e0;
        }

    .program-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
    }

        .detail-item .label {
            color: #666;
        }

        .detail-item .value {
            font-weight: 600;
            color: #333;
        }

        .detail-item.total {
            margin-top: 0.5rem;
            padding-top: 1rem;
            border-top: 1px dashed #e0e0e0;
        }

            .detail-item.total .label,
            .detail-item.total .value {
                font-size: 1.2rem;
                font-weight: 700;
                color: #405712;
            }

    i.fa-brands {
        font-size: 1.5rem;
        margin-right: 0.5rem;
        color: #DAA520;
    }
</style>

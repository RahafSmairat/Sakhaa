@model Sakhaa.Models.NewsEvent
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعديل الخبر";
}

<div class="admin-form">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
        <h5 class="mb-0">تعديل الخبر: @Model.Title</h5>
        <a href="/Admin/NewsEvents" class="btn btn-sm btn-outline-secondary">
            <i class="fa-solid fa-arrow-right me-1"></i> العودة
        </a>
    </div>

    <form asp-action="EditNewsEvent" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">عنوان الخبر</label>
                    <input asp-for="Title" class="form-control" required>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">محتوى الخبر</label>
                    <textarea asp-for="Content" class="form-control" rows="10" required dir="rtl"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ImageFile" class="form-label">صورة الخبر</label>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mb-2">
                            <img src="~/images/@Model.Image" alt="@Model.Title" style="max-width: 200px; max-height: 150px; object-fit: cover;" class="img-thumbnail" />
                        </div>
                    }
                    <input id="ImageFile" name="ImageFile" type="file" class="form-control" accept="image/*">
                    <small class="form-text text-muted">اختر صورة جديدة لتحديث الصورة الحالية. اترك هذا الحقل فارغًا للاحتفاظ بالصورة الحالية.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label">تاريخ الفعالية</label>
                    <input asp-for="EventDate" type="date" class="form-control" value="@Model.EventDate.ToString("yyyy-MM-dd")" required>
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">تاريخ الإنشاء</label>
                    <div class="form-control-plaintext">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "غير محدد")</div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a href="/Admin/NewsEvents" class="btn btn-outline-secondary me-2">إلغاء</a>
            <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
        </div>
    </form>
</div>


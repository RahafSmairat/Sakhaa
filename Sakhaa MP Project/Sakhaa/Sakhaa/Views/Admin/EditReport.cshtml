@model Sakhaa.Models.ViewModels.ReportViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعديل التقرير";
}

<div class="admin-form">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
        <h5 class="mb-0">تعديل التقرير العام</h5>
        <a href="/Admin/Reports" class="btn btn-sm btn-outline-secondary">
            <i class="fa-solid fa-arrow-right me-1"></i> العودة
        </a>
    </div>

    <form asp-action="EditReport" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="FilePath" />
        
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="ReportFileName" class="form-label">اسم التقرير</label>
                    <input asp-for="ReportFileName" class="form-control" required>
                    <span asp-validation-for="ReportFileName" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="ReportYear" class="form-label">سنة التقرير</label>
                    <input asp-for="ReportYear" class="form-control" min="2000" max="2100" required>
                    <span asp-validation-for="ReportYear" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="ReportFile" class="form-label">ملف التقرير (PDF)</label>
                    <input type="file" class="form-control" id="ReportFile" name="ReportFile" accept=".pdf">
                    <div class="form-text mt-2">يرجى رفع ملف بصيغة PDF فقط. (اتركه فارغًا إذا لم ترغب في تغيير الملف)</div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <div class="mb-3">
                        <label class="form-label">الملف الحالي:</label>
                        <div>
                            <a href="~/documents/reports/@Model.FilePath" class="btn btn-sm btn-outline-primary" target="_blank">
                                <i class="fa-solid fa-file-pdf"></i> عرض الملف الحالي
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
        
        <div class="d-flex justify-content-end mt-4">
            <a href="/Admin/Reports" class="btn btn-outline-secondary me-2">إلغاء</a>
            <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
        </div>
    </form>
</div> 